{%
  set classes = [
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'usa-width-one-half',
    'usa-media_block',
    'usa-section',
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ content.field_media_image.0 }}
      <div class="usa-media_block-body">
        <h3>{{ paragraph.field_uswds_title.value }}</h3>
        {{ content.field_uswds_body.0 }}
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
